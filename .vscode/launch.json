{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "‚öΩ Leagues_manager: Debug Rastreo de datos desde Fuentes deportivas para extracci√≥n de datos",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main_init_scripts.py",
            "console": "integratedTerminal",
            "args": [
                "--process",
                "scheduler_proceso_rastreo_data_fuentes_deportivas"
            ]
        },
        {
            "name": "üåê Debug TipsterByte FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main_init_web_server:app",
                "--host", "127.0.0.1",
                "--port", "8010",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "jinja": true
        },
        {
            "name": "üêç Debug: manage.py (interactivo)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "console": "integratedTerminal",
            // --- ¬°CAMBIO CLAVE! ---
            // Los argumentos ahora se toman de la variable de entrada "commandArgs".
            "args": "${input:commandArgs}",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "justMyCode": true
        }        
    ],
    // Aqu√≠ definimos las entradas que el depurador puede solicitar.
    "inputs": [
        {
            "id": "commandArgs",
            "type": "promptString",
            "description": "Introduce los argumentos para manage.py",
            "default": "seed-sql AuthSeeder --update",
            "options": {
                "prompt": "Escribe los argumentos para manage.py (ej: db-sql reset --hard)",
                "placeHolder": "ej: seed-sql AuthSeeder"
            }
        }
    ]    
}
